<div id="<%= dom_id user %>">
  <p>
    <strong>Name:</strong>
    <%= user.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>

  <p>
    <strong>Content:</strong>
    <% if user.micropost.present? %>
      <%= user.micropost.first.content %>
    <% else %>
      No content
    <% end %>
  </p>

</div>
